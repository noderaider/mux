{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "node",
      "jsx": "react",
      "pretty": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitUseStrict": true,
      "sourceMap": false,
      "allowSyntheticDefaultImports": false,
      "importHelpers": true,
      "typeRoots": ["./node_modules/@types"],
      "lib": [
        "es2017",
        "dom"
      ]
    },
    "exclude": [ "node_modules" ]
  }
  